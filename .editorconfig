# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2

[**/layouts/**.html]
insert_final_newline = false
trim_trailing_whitespace = true

[*.css]
indent_style = tab
indent_size = 4
